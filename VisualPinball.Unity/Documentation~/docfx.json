{
	"build": {
		"content": [
			{
				"files": [
					"creators-guide/**/toc.yml",
					"creators-guide/**.md",
					"plugins/**/toc.yml",
					"plugins/**.md",
					"toc.yml",
					"*.md"
				]
			},
			{
				"files": "CHANGELOG.md",
				"src": "../.."
			}
		],
		"resource": [
			{
				"files": [
					"**/*.png",
					"**/*.gif",
					"**/*.jpg",
					"**/*.svg",
					"**/*.ico",
					"**/*.webp",
					"**/*.webmanifest",
					"../VisualPinball.Unity.Editor/Resources/Icons/*.png",
					"CNAME"
				]
			}
		],
		"output": "_site",
		"globalMetadataFiles": [],
		"fileMetadataFiles": [],
		"template": [
			"default",
			"modern",
			"template/vpe"
		],
		"postProcessors": [ "ExtractSearchIndex" ],
		"globalMetadata": {
			"_appTitle": "VPE Documentation",
			"_appFooter": "<span>Copyright Â© 2025 VPE Team</span>",
			"_appFaviconPath": "favicon.png",
			"_gitContribute": {
				"branch": "master"
			},
			"_enableSearch": true
		},
		"sitemap":{
			"baseUrl": "https://docs.visualpinball.org/",
			"priority": 0.5,
			"changefreq": "weekly"
		},
		"markdownEngineName": "markdig",
		"noLangKeyword": false,
		"keepFileLink": false,
		"cleanupCacheHistory": false,
		"disableGitFeatures": false
	}
}
