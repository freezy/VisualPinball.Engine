<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <!-- https://github.com/dotnet/sdk/issues/747#issuecomment-518156718 -->
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <Title>VisualPinball.Engine</Title>
    <Description>A .NET port of Visual Pinball in C#</Description>
    <Authors>freezy;ravarcade;shaderbytes;rbxnk;jsm174;Vroonsh;Rowlan</Authors>
    <Copyright>Copyright 2020 freezy - &lt;freezy@vpdb.io&gt;</Copyright>
    <AssemblyVersion>0.1.0.0</AssemblyVersion>
    <AssemblyFileVersion>0.1.0.0</AssemblyFileVersion>
    <InformationalVersion>0.1.0.0</InformationalVersion>
    <LangVersion>7.3</LangVersion>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="**/*.meta" Visible="false" />
    <None Remove="obj\**" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="NLog" Version="4.7.3" />
    <PackageReference Include="OpenMcdf" Version="2.2.1.6" />
    <PackageReference Include="NetMiniZ" Version="1.1.1" />
    <PackageReference Include="NetVips" Version="1.2.3" />
    <PackageReference Include="NetVips.Native" Version="8.9.2-build3">
      <ExcludeAssets>all</ExcludeAssets>
    </PackageReference>
    <PackageReference Include="ILRepack.MSBuild.Task" Version="2.0.13" />
  </ItemGroup>
  <ImportGroup>
    <Import Project="$(NuGetPackageRoot)\netminiz\1.1.1\build\net472\NetMiniZ.targets" Condition="Exists('$(NuGetPackageRoot)\netminiz\1.1.1\build\net472\NetMiniZ.targets')" />
  </ImportGroup>
  <ImportGroup Condition="$([MSBuild]::IsOSPlatform('Windows')) And '$(PlatformTarget)' == 'x86'">
    <Import Project="$(NuGetPackageRoot)\netvips.native.win-x86\8.9.2-build3\build\net45\NetVips.Native.win-x86.targets" Condition="Exists('$(NuGetPackageRoot)\netvips.native.win-x86\8.9.2-build3\build\net45\NetVips.Native.win-x86.targets')" />
  </ImportGroup>
  <ImportGroup Condition="$([MSBuild]::IsOSPlatform('Windows')) And '$(PlatformTarget)' != 'x86'">
    <Import Project="$(NuGetPackageRoot)\netvips.native.win-x64\8.9.2-build3\build\net45\NetVips.Native.win-x64.targets" Condition="Exists('$(NuGetPackageRoot)\netvips.native.win-x64\8.9.2-build3\build\net45\NetVips.Native.win-x64.targets')" />
  </ImportGroup>
  <ImportGroup Condition="$([MSBuild]::IsOSPlatform('OSX'))">
    <Import Project="$(NuGetPackageRoot)\netvips.native.osx-x64\8.9.2-build3\build\net461\NetVips.Native.osx-x64.targets" Condition="Exists('$(NuGetPackageRoot)\netvips.native.osx-x64\8.9.2-build3\build\net461\NetVips.Native.osx-x64.targets')" />
  </ImportGroup>
  <ImportGroup Condition="$([MSBuild]::IsOSPlatform('Linux'))">
    <Import Project="$(NuGetPackageRoot)\netvips.native.linux-x64\8.9.2-build3\build\net461\NetVips.Native.linux-x64.targets" Condition="Exists('$(NuGetPackageRoot)\netvips.native.linux-x64\8.9.2-build3\build\net461\NetVips.Native.linux-x64.targets')" />
  </ImportGroup>
  <ItemGroup>
    <ProjectReference Include="..\VisualPinball.Resources\VisualPinball.Resources.csproj" />
  </ItemGroup>
  <ItemGroup>
    <None Include="NetVips.dll.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="obj\**" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Remove="obj\**" />
  </ItemGroup>
  <Target Name="ILRepack" AfterTargets="Build">
    <ItemGroup>
      <InputAssemblies Include="System.Buffers.dll" />
      <InputAssemblies Include="System.Memory.dll" />
      <InputAssemblies Include="System.Numerics.Vectors.dll" />
      <InputAssemblies Include="System.Runtime.CompilerServices.Unsafe.dll" />
    </ItemGroup>
    <ILRepack OutputType="$(OutputType)" MainAssembly="NetVips.dll" InputAssemblies="@(InputAssemblies)" OutputAssembly="NetVips.dll" WorkingDirectory="$(OutDir)" />
  </Target>
  <Target Name="PluginsDeploy" AfterTargets="ILRepack">
    <ItemGroup>
      <Plugins Include="$(OutDir)NLog.dll" />
      <Plugins Include="$(OutDir)OpenMcdf.dll" />
      
      <Plugins Include="$(OutDir)NetMiniZ.dll" native="win-x86" />
      <Plugins Include="$(OutDir)NetMiniZ.dll" native="win-x64" />
      <Plugins Include="$(OutDir)NetMiniZ.dll" native="osx-x64" />      
      <Plugins Include="$(OutDir)NetMiniZ.dll" native="linux-x64" />

      <Plugins Include="$(NuGetPackageRoot)\netminiz\1.1.1\runtimes\win-x86\native\*" native="win-x86" />
      <Plugins Include="$(NuGetPackageRoot)\netminiz\1.1.1\runtimes\win-x64\native\*" native="win-x64" />
      <Plugins Include="$(NuGetPackageRoot)\netminiz\1.1.1\runtimes\osx-x64\native\*" native="osx-x64" />
      <Plugins Include="$(NuGetPackageRoot)\netminiz\1.1.1\runtimes\linux-x64\native\*" native="linux-x64" />

      <Plugins Include="$(OutDir)NetVips.dll" native="win-x86" />
      <Plugins Include="$(OutDir)NetVips.dll" native="win-x64" />
      <Plugins Include="$(OutDir)NetVips.dll;$(OutDir)NetVips.dll.config" native="osx-x64" />     
      <Plugins Include="$(OutDir)NetVips.dll;$(OutDir)NetVips.dll.config" native="linux-x64" />
        
      <Plugins Include="$(NuGetPackageRoot)\netvips.native.win-x86\8.9.2-build3\runtimes\win-x86\native\*.dll" native="win-x86" />
      <Plugins Include="$(NuGetPackageRoot)\netvips.native.win-x64\8.9.2-build3\runtimes\win-x64\native\*.dll" native="win-x64" />
      <Plugins Include="$(NuGetPackageRoot)\netvips.native.osx-x64\8.9.2-build3\runtimes\osx-x64\native\*.dylib" native="osx-x64" />
      <Plugins Include="$(NuGetPackageRoot)\netvips.native.linux-x64\8.9.2-build3\runtimes\linux-x64\native\*.dylib" native="linux-x64" />
    </ItemGroup>
    <Message Text="PluginsDeploy: @(Plugins)" />
    <Copy SourceFiles="@(Plugins)" Condition="'%(Plugins.native)' == ''" DestinationFolder="..\VisualPinball.Unity\Plugins\" SkipUnchangedFiles="true" />
    <Copy SourceFiles="@(Plugins)" Condition="'%(Plugins.native)' != ''" DestinationFolder="..\VisualPinball.Unity\Plugins\%(Plugins.native)\" SkipUnchangedFiles="true" />
  </Target>
</Project>
